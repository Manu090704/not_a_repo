<% if (info != '') { %>
<div class="notification is-info"><%= info %></div>
<% } %> <% if (warning != '') { %>
<div class="notification is-warning"><%= warning %></div>
<% } %>

<form
  action="/user/<% if (isNew) { %>signup<% } else { %>login<% } %>"
  method="POST"
>
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <label for="nombre" class="label">Usuario</label>
  <input
    class="input is-info"
    type="text"
    placeholder="Groot"
    id="nombre"
    name="nombre"
    required
  />
  <br /><br />
  <label for="apellido" class="label">Apellido</label>
  <input
    class="input is-info"
    type="text"
    placeholder="Cortes"
    id="apellido"
    name="apellido"
    required
  />
  <br /><br>
  <label for="password" class="label">Password</label>
  <input
    class="input is-info"
    type="password"
    id="password"
    name="password"
    required
  />
  <br /><br />
  <input class="button is-info" type="submit" value="Entrar" />
</form>
